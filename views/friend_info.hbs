<div class="userProfile">

    <div class="userProfile_user">
        <img class="avatarURL" src="{{userProfile.user.AVATAR}}" alt=""/>
        <div>ID: {{userProfile.user.id}}</div>
        <div>Tag: {{userProfile.user.tag}}</div>
        <div>CreatedAt: {{userProfile.user.createdAt}}</div>
        <div>Bot: {{userProfile.user.bot}}</div>
    </div>

    <div class="userProfile_mutualGuilds">
        <br/>
        <div>Mutual Guilds:</div>
        <br/>
        {{#each userProfile.mutualGuilds}}
            <div class="guild">
                <img class="mutualGuilds_iconURL" src="{{iconURL}}"/>
                <div class="guild_id">ID:
                    <a href="/guild?id={{id}}" class="aguild">{{id}}</a>
                </div>
                |
                <div class="guild_name">Name: {{name}}</div>
                |
                <div class="guild_memberCount">Member Count: {{memberCount}}</div>
            </div>
        {{/each}}
    </div>

    <div class="error">
        <pre>{{#if error}}{{error}}{{/if}}</pre>
    </div>

</div>

<style>
    .guild {
    }

    .guild_id {
        display: inline-block;
    }

    .guild_name {
        display: inline-block;
    }

    .guild_memberCount {
        display: inline-block;
    }

    .avatarURL {
        width: 250px;
        height: 250px;
        display: inline-block;
        border: 1px solid black;
    }

    .mutualGuilds_iconURL {
        width: 50px;
    }
</style>